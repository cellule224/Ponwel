<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppThemeActionBarTranslucent" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:dividerHeight">10dip</item>
        <item name="android:divider">#9e9f9f</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0.0sp</item>
    </style>


    <style name="CustomHorizontalProgress" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:color">@color/colorPrimaryDark</item>
        <item name="android:scaleY">2</item>
    </style>

    <!-- Button styles-->
    <style name="ColoredAdd.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/rounded_add_btn</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">4dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="mRounded.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/rounded_add_btn</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:padding">4dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Editext styles -->
    <style name="EditextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">36dp</item>
        <item name="background">@drawable/spinner_bg</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:paddingLeft">2dp</item>
    </style>

    <style name="MyHeaderTitles" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/product_title</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="SmallHeaderTitles" parent="MyHeaderTitles">
        <item name="android:textSize">18sp</item>
    </style>
</resources>
